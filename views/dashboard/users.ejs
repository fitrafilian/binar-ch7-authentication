<main>
  <!-- Page content-->
  <div class="my-3 justify-content-between" style="width: 300px; padding-left: 0.75rem">
    <% if (message.length != 0) { %>
    <div class="alert alert-success" role="alert"><%= message %></div>
    <% } %>
  </div>
  <div class="container-fluid my-3 justify-content-between d-flex">
    <a href="/dashboard/user/insert" class="btn btn-primary"><i class="bi bi-plus-square"></i> Insert user</a>
    <form class="d-flex">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
  <div class="container-fluid">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">No.</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Detail</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, i) => { i++ %>
        <tr>
          <th scope="row"><%= i++ %></th>
          <td><%= user.firstName + ' ' + user.lastName %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/dashboard/user/<%= user._id %> " class="btn badge rounded-pill bg-info" disabled="disabled"
              ><i class="bi bi-info-circle"> details</i></a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>
